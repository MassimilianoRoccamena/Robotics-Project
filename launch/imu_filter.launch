<launch>
    <arg name="imu_topic"  default="/mavros/imu/data_raw" />

    <arg name="base_frame"  default="base_link"/>

    <node pkg="imu_filter_madgwick" type="imu_filter_node" name="imu_filter" output="screen">  
        <remap from="/imu/data_raw" to="$(arg imu_topic)" />  

        <param name="fixed_frame" value="$(arg base_frame)"/>
        <param name="publish_tf" value="false"/>
        <param name="use_mag" value="false"/>
        <param name="use_magnetic_field_msg" value="false"/>

        <param name="zeta" value="0.00"/>
        <param name="gain" value="0.02"/>  
    </node>
</launch>
    -->

    <node pkg="amcl" type="amcl" name="localization" output="screen" >
        <remap from="scan" to="$(arg scan_topic)"/>

        <param name="global_frame_id"           value="$(arg map_frame)"/>
        <param name="odom_frame_id"             value="$(arg odom_frame)"/>
        <param name="base_frame_id"             value="$(arg base_frame)"/>

        <param name="initial_pose_x"             value="0.0"/>
        <param name="initial_pose_y"             value="0.0"/>
        <param name="initial_pose_a"             value="0.0"/>

        <param name="initial_cov_xx"             value="2.0"/>
        <param name="initial_cov_yy"             value="2.0"/>
        <param name="initial_cov_aa"             value="(π/4)*(π/4)"/>

        <param name="min_particles"             value="500"/>
        <param name="max_particles"             value="2000"/>

        <param name="laser_max_range"           value="11.0"/>
        <param name="laser_z_hit"               value="0.6"/>
        <param name="laser_z_short"             value="0.1"/>
        <param name="laser_z_max"               value="0.05"/>
        <param name="laser_z_rand"              value="0.4"/>
        <param name="laser_sigma_hit"           value="0.2"/>
        <param name="laser_lambda_short"        value="0.1"/>

        <param name="resample_interval"         value="2"/>

        <param name="kld_err"                   value="0.05"/>
        <param name="kld_z"                     value="0.95"/>

        <param name="odom_alpha1"               value="0.4"/>
        <param name="odom_alpha2"               value="0.8"/>
        <param name="odom_alpha3"               value="0.8"/>
        <param name="odom_alpha4"               value="0.4"/>
        <param name="odom_alpha5"               value="0.2"/>

        <param name="update_min_d"              value="0.2"/>
        <param name="update_min_a"              value="0.1"/>

